{
  "name": "electron-mac-template",
  "version": "1.0.0",
  "description": "Template for building Electron apps for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --universal"
  },
  "build": {
    "appId": "com.soundbuttons.app",
    "productName": "音效按钮",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "需要访问麦克风来获取音频设备列表",
        "NSCameraUsageDescription": "此应用不需要访问相机"
      }
    },
    "dmg": {
      "sign": false
    }
  },
  "devDependencies": {
    "electron": "^20.0.0",
    "electron-builder": "^24.9.1"
  }
}
