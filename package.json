{
  "name": "electron-mac-template",
  "version": "1.0.0",
  "description": "Template for building Electron apps for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --universal"
  },
  "build": {
    "appId": "com.example.electron-mac-template",
    "productName": "ElectronMacApp",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "minimumSystemVersion": "10.13.0",
      "electronLanguages": ["zh-CN"]
    },
    "dmg": {
      "sign": false
    }
  },
  "devDependencies": {
    "electron": "^20.0.0",
    "electron-builder": "^24.9.1"
  }
}
